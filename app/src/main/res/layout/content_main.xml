<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.monte.ircontroller.MainActivity"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/protocolSpinner"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frequencies Supported:" />
    <TextView
        android:id="@+id/minFreqText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />
    <TextView
        android:id="@+id/maxFreqText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Frequency:"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/transmitFrequencyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="38400"
            android:gravity="center"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Data (hex):"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/transmitDataText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:gravity="center"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Baud Rate:"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/baudRateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000"
            android:gravity="center"
            android:layout_weight="2"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Message!"
        android:background="@color/colorAccent"
        android:onClick="sendIR"/>
</LinearLayout>
